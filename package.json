{
  "name": "HCBrowser",
  "version": "1.0.0",
  "description": "Um navegador privado sem telemtria",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "Henrique Chaves",
  "license": "MIT",
  "devDependencies": {
    "electron": "^16.0.0",
    "electron-builder": "^22.11.7"
  },
  "build": {
    "appId": "com.mrfaraday841.hcbrowser",
    "productName": "Hc Browser",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "zip"
      ]
    }
  }
}
